name: Process Pending Actions

on:
  schedule:
    # Run every hour to check for expired pending actions
    - cron: '0 * * * *'
  workflow_dispatch:

concurrency:
  group: process-pending-actions
  cancel-in-progress: false

permissions:
  contents: read
  issues: write

jobs:
  process:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Go
        uses: actions/setup-go@v5
        with:
          go-version: '1.22'

      - name: Build gh-simili
        run: go build -o gh-simili ./cmd/gh-simili

      - name: Process Pending Actions
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          GEMINI_API_KEY: ${{ secrets.GEMINI_API_KEY }}
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
          QDRANT_URL: ${{ secrets.QDRANT_URL }}
          QDRANT_API_KEY: ${{ secrets.QDRANT_API_KEY }}
        run: |
          ./gh-simili process-pending \
            --config .github/simili.yaml
